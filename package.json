{
  "name": "twitcher",
  "displayName": "twitcher",
  "description": "A Simple Chat for Twitch",
  "version": "0.0.1",
  "publisher": "renkalabs",
  "engines": {
    "vscode": "^1.21.0"
  },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "twitcher.refreshViewerCount",
        "title": "Refresh Twitch Viewer count",
        "category": "Twitch"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "twitcher",
          "name": "Twitcher"
        }
      ]
    },
    "keywords": ["twitch", "chat"],
    "configuration": {
      "type": "object",
      "properties": {
        "twitcher.oauth": {
          "type": "string",
          "default": "",
          "description": "Keep it secret!"
        },
        "twitcher.hideStatusBar": {
          "type": "boolean",
          "default": false,
          "description": "Hides the Twitch online count in the statusbar"
        },
        "twitcher.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Twitcher"
        },
        "twitcher.debug": {
          "type": "boolean",
          "default": false,
          "description": "only for dev"
        },

        "twitcher.username": {
          "type": "string",
          "default": "twitcher",
          "description": "Username"
        },

        "twitcher.clientID": {
          "type": "string",
          "default": "",
          "description":
            "Client id is required read https://blog.twitch.tv/client-id-required-for-kraken-api-calls-afbb8e95f843"
        },
        "twitcher.channel": {
          "type": "string",
          "default": "",
          "description": "channel defaults to username"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "eslint": "^4.11.0",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "node-lame": "^1.0.6",
    "play-sound": "^1.1.2",
    "tmi.js": "^1.2.1",
    "twitch-bot": "^1.2.5"
  }
}
