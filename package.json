{
  "name": "twitcher",
  "displayName": "twitcher",
  "description": "A Simple Chat for Twitch",
  "version": "0.0.1",
  "publisher": "renkalabs",
  "engines": {
    "vscode": "^1.21.0"
  },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./extension",
  "contributes": {
    "menus": {
      "view/item/context": [
        {
          "command": "twitcher.reply",
          "when": "view == twitcher/chat"
        }
      ]
    },
    "commands": [
      {
        "command": "twitcher.reply",
        "title": "Reply",
        "category": "Twitcher"
      },
      {
        "command": "twitcher.refreshViewerCount",
        "title": "Refresh Twitch Viewer count",
        "category": "Twitcher"
      },
      {
        "command": "twitcher.sendMessage",
        "title": "Send",
        "category": "Twitcher"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "twitcher/chat",
          "name": "Twitch Chat",
          "when": "config.twitcher.enabled == true"
        },
        {
          "id": "twitcher/userlist",
          "name": "Twitch users",
          "when":
            "config.twitcher.enabled == true && config.twitcher.userList == true"
        }
      ]
    },
    "keywords": ["twitch", "chat"],
    "configuration": {
      "type": "object",
      "properties": {
        "twitcher.hideStatusBar": {
          "type": "boolean",
          "default": false,
          "description": "Hides the Twitch online count in the statusbar"
        },
        "twitcher.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Twitcher"
        },
        "twitcher.userList": {
          "type": "boolean",
          "default": false,
          "description": "Show Userlist in Sidebar"
        },
        "twitcher.notificationSound": {
          "type": ["boolean", "string"],
          "default": true,
          "description": "True or false you can also providate a wav file"
        },
        "twitcher.debug": {
          "type": "boolean",
          "default": false,
          "description": "only for dev"
        },
        "twitcher.username": {
          "type": "string",
          "default": "twitcher",
          "description": "Username"
        },
        "twitcher.channel": {
          "type": "string",
          "default": "",
          "description": "channel defaults to username"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "eslint": "^4.11.0",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "application-config-path": "^0.1.0",
    "configstore": "^3.1.2",
    "node-lame": "^1.0.6",
    "node-wav-player": "0.0.1",
    "play-sound": "^1.1.2",
    "tmi.js": "^1.2.1",
    "twitch-bot": "^1.2.5"
  }
}
