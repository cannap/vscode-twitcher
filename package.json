{
  "name": "twitcher",
  "displayName": "twitcher",
  "description": "A Simple Chat for Twitch",
  "version": "1.0.0",
  "publisher": "renkalabs",
  "engines": {
    "vscode": "^1.21.0"
  },
  "galleryBanner": {
    "color": "#6441a5",
    "theme": "dark"
  },
  "icon": "resources/images/logo.png",
  "repository": "https://github.com/cannap/vscode-twitcher",
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./src/extension",
  "keywords": ["twitch", "chat"],
  "contributes": {
    "menus": {
      "view/title": [
        {
          "command": "twitcher.sendMessage",
          "when": "view == twitcher/chat",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "twitcher.explorerReply",
          "when": "view == twitcher/chat"
        }
      ]
    },
    "commands": [
      {
        "command": "twitcher.setClientID",
        "title": "Set Twitch Clientid",
        "category": "Twitcher"
      },

      {
        "command": "twitcher.setOAuth",
        "title": "Set Twitch OAuth Token",
        "category": "Twitcher"
      },
      {
        "command": "twitcher.explorerReply",
        "title": "Reply"
      },
      {
        "command": "twitcher.refreshViewerCount",
        "title": "Refresh Twitch Viewer count"
      },
      {
        "command": "twitcher.sendMessage",
        "category": "Twitcher",
        "title": "Send a Message to Twitch",
        "icon": {
          "dark": "./resources/images/light_chat.svg",
          "light": "./resources/images/dark_chat.svg"
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "twitcher/chat",
          "name": "Twitch Chat",
          "when": "config.twitcher.enabled == true"
        },
        {
          "id": "twitcher/userlist",
          "name": "Twitch users",
          "when":
            "config.twitcher.enabled == true && config.twitcher.userList == true"
        }
      ]
    },

    "configuration": {
      "type": "object",
      "properties": {
        "twitcher.hideStatusBar": {
          "type": "boolean",
          "default": false,
          "description": "Hides the Twitch online count in the statusbar"
        },
        "twitcher.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Twitcher"
        },
        "twitcher.userList": {
          "type": "boolean",
          "default": false,
          "description": "Show Userlist in Sidebar"
        },
        "twitcher.notificationSound": {
          "type": ["boolean", "string"],
          "default": true,
          "description": "True or false you can also providate a wav file"
        },
        "twitcher.debug": {
          "type": "boolean",
          "default": false,
          "description": "only for dev"
        },
        "twitcher.username": {
          "type": "string",
          "default": "twitcher",
          "description": "Username"
        },
        "twitcher.channel": {
          "type": "string",
          "default": "",
          "description": "Twitch Channel without #"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^11.0.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "application-config-path": "^0.1.0",
    "configstore": "^3.1.2",
    "node-lame": "^1.0.6",
    "node-wav-player": "0.0.1",
    "play-sound": "^1.1.2",
    "tmi.js": "^1.2.1",
    "twitch-bot": "^1.2.5"
  }
}
